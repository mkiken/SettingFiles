{
  "tools": {
    "autoAccept": false,
    "exclude": [
      "dangerous_tool"
    ],
    "sandbox": false,
    "shell": {
      "showColor": true
    }
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "enablePromptCompletion": true,
    "previewFeatures": false
  },
  "context": {
    "fileFiltering": {
      "respectGitIgnore": true,
      "enableRecursiveFileSearch": true
    }
  },
  "ide": {
    "enabled": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "Atom One",
    "hideBanner": true,
    "hideTips": true,
    "showStatusInTitle": true,
    "footer": {
      "hideContextPercentage": false,
      "hideSandboxStatus": true
    },
    "showModelInfoInChat": true,
    "showMemoryUsage": true,
    "showLineNumbers": true,
    "showCitations": true
  },
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "command": "/usr/local/bin/uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ]
    },
    "gitmcp": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://gitmcp.io/docs"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "superagent": {
      "command": "npx",
      "args": [
        "-y",
        "@superclaude-org/superagent"
      ]
    }
  },
  "output": {
    "format": "text"
  },
  "hooks": {
    "AfterAgent": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.gemini/hooks/notification.sh --event after_agent"
          },
          {
            "type": "command",
            "command": "python3 ~/.gemini/hooks/gemini-hook.py after_agent"
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.gemini/hooks/notification.sh --event before_tool"
          },
          {
            "type": "command",
            "command": "python3 ~/.gemini/hooks/gemini-hook.py before_tool"
          }
        ]
      }
    ]
  },
  "_disabledMcpServers": {},
  "experimental": {
    "plan": true
  }
}
