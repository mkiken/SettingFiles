{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "ai",
        "bin",
        "claude",
        "commitlint",
        "czg",
        "configs",
        "gitfiles",
        "ghostty",
        "mac",
        "other",
        "ranger",
        "repository",
        "sedfiles",
        "shell",
        "submodules",
        "terminal",
        "tmux",
        "vimfiles",
        "vscode",
        "windows"
      ]
    ],
    "scope-empty": [2, "never"],
    "subject-min-length": [2, "always", 1],
    "subject-max-length": [2, "always", 50],
    "subject-case": [2, "never", ["upper-case"]]
  }
}