#!/bin/sh

echo "start git submodule setting."
git submodule sync
git submodule update --recursive
git submodule foreach 'git pull origin master'
echo "end git submodule setting."

echo "start brew update."
brew update
brew upgrade
# brew upgrade git
# brew upgrade rmtrash
# brew upgrade emacs
# brew upgrade vim
# brew upgrade rlwrap
brew reinstall --HEAD neovim
brew reinstall --HEAD fzf
brew cask update
echo "end brew update."

vim -c NeoBundleClean -c NeoBundleInstall -c NeoBundleUpdate -c qa
# ../.atom/package_initialize
# echo "If package of Emacs is updated, please eval-buffer 'package-initialize.el' on Emacs."
zcompile ~/.zshrc
